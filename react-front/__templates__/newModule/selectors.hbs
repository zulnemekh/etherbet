import { createSelector } from 'reselect';
import * as constants from './constants';

const get{{pascalCase name}} = state => state[constants.NAME];

export const makeErrorSelector = (feature) => {
  return createSelector(get{{pascalCase name}}, ({ errors }) => errors[feature])
}

export const makeLoadingSelector = (feature) => {
  return createSelector(get{{pascalCase name}}, ({ loader }) => loader[feature])
}

